mixin card(img)
  div(class='memory-card')
    img(class='front-face' src='images/'+img+'.png' alt=img)
    img(class='back-face' src='images/logo.png' alt='Memory Card')
  div(class='memory-card')
    img(class='front-face' src='images/'+img+'.png' alt=img)
    img(class='back-face' src='images/logo.png' alt='Memory Card')

<!DOCTYPE html>
html(lang="ru")
head
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width, initial-scale=1.0")
  title Memory game
  link(rel="stylesheet" href="styles/style.css")
body
  .memory-game
    +card('Wilson')
    +card('Willow')
    +card('Webber')
    +card('Wendy')
    +card('Wes')
    +card('Woodie')
  script(src="script.js")